recordsForKeys:
SELECT key, record FROM records WHERE key IN ?;

insert:
INSERT INTO records (key, record) VALUES (?,?);

update:
UPDATE records SET record=:record WHERE key=:key;

delete:
DELETE FROM records WHERE key=?;

deleteRecords:
DELETE FROM records WHERE key IN ?;


CREATE TABLE records (_id INTEGER PRIMARY KEY AUTOINCREMENT, key TEXT NOT NULL, record TEXT NOT NULL);

CREATE INDEX idx_records_key ON records(key);


EXPLAIN QUERY PLAN SELECT key, record FROM records WHERE key='1';

EXPLAIN SELECT key, record FROM records WHERE key=?;

EXPLAIN SELECT key, record FROM records WHERE key IN (?,?,?,?,?,?,?,?,?,?,?,?);


recordForKey:
